<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.arkui.transportation_owner.activity.user.RegisterActivity">

    <com.arkui.fz_tools.view.ShapeEditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="70dp"
        android:background="@null"
        android:drawableLeft="@mipmap/phone"
        android:drawablePadding="10dp"
        android:hint="请输入您的手机号"
        android:inputType="phone"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:singleLine="true"
        android:textColorHint="@color/gray_color"
        android:textSize="@dimen/sp_14"
        app:buttonColor="@color/black_list_color"
        app:radius="10dp"
        app:stroke="0.2dp" />

    <com.arkui.fz_tools.view.ShapeLinearLayout
        android:id="@+id/ll_code"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/et_phone"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="10dp"
        app:buttonColor="@color/black_list_color"
        app:radius="10dp"
        app:stroke="0.2dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/password" />


        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="@color/gray_color"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="@color/mainColor"
            android:textSize="@dimen/sp_13" />

    </com.arkui.fz_tools.view.ShapeLinearLayout>

    <com.arkui.fz_tools.view.ShapeEditText
        android:id="@+id/et_new_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/ll_code"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:drawableLeft="@mipmap/password"
        android:drawablePadding="10dp"
        android:hint="密码（6-25位数字、字母或下划线）"
        android:inputType="textPassword"
        android:paddingLeft="25dp"
        android:singleLine="true"
        android:textColorHint="@color/gray_color"
        android:textSize="@dimen/sp_14"
        app:buttonColor="@color/black_list_color"
        app:radius="10dp"
        app:stroke="0.2dp" />

    <com.arkui.fz_tools.view.ShapeEditText
        android:id="@+id/et_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/et_new_password"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:drawableLeft="@mipmap/password"
        android:drawablePadding="10dp"
        android:hint="再次输入新密码"
        android:inputType="textPassword"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:singleLine="true"
        android:textColorHint="@color/gray_color"
        android:textSize="@dimen/sp_14"
        app:buttonColor="@color/black_list_color"
        app:radius="10dp"
        app:stroke="0.2dp" />

    <com.arkui.fz_tools.view.ShapeEditText
        android:layout_below="@+id/et_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/et_invite"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:drawableLeft="@mipmap/register_qrcode"
        android:drawablePadding="10dp"
        android:hint="输入邀请码（可不填）"
        android:inputType="textPassword"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:singleLine="true"
        android:textColorHint="@color/gray_color"
        android:textSize="@dimen/sp_14"
        app:buttonColor="@color/black_list_color"
        app:radius="10dp"
        app:stroke="0.2dp" />
    <com.arkui.fz_tools.view.ShapeButton

        android:id="@+id/bt_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_invite"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="90dp"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        app:buttonColor="@color/mainColor"
        app:radius="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_register"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <TextView
            android:layout_centerVertical="true"
            android:textColor="@color/gray_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="返回登录"
            android:textSize="@dimen/sp_13" />

        <CheckBox
            android:padding="3dp"
            android:button="@drawable/register_checkbox_style"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_clause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerVertical="true"
            android:textColor="@color/gray_color"
            android:id="@+id/tv_clause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="免责声明"
            android:textSize="@dimen/sp_13" />
    </RelativeLayout>

</RelativeLayout>
