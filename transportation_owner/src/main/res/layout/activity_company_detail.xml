<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context="com.arkui.transportation_owner.activity.logistics.PersonageDetailActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TableRow
            style="@style/TableRow"
            android:layout_marginTop="9dp">

            <TextView
                style="@style/TextView"
                android:layout_marginRight="40dp"
                android:text="公司名称" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/TextViewWeight999" />
        </TableRow>

        <TableRow
            style="@style/TableRow"
            android:layout_marginTop="0.5dp">

            <TextView
                style="@style/TextView"
                android:text="公司地址" />

            <TextView
                android:id="@+id/tv_address"
                style="@style/TextViewWeight999" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="8dp">

            <TextView
                style="@style/TextView"
                android:text="联系电话" />

            <TextView
                style="@style/TextViewWeight999"
                android:id="@+id/tv_tel" />

            <ImageView
                android:id="@+id/iv_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@mipmap/wl_phone" />

        </TableRow>

        <TableRow
            style="@style/TableRow"
            android:layout_marginTop="0.5dp">

            <TextView
                style="@style/TextView"
                android:text="经办人姓名" />

            <TextView
                style="@style/TextViewWeight999"
                android:id="@+id/tv_handler_name" />
        </TableRow>

        <TableRow
            style="@style/TableRow"
            android:layout_marginTop="5dp">

            <TextView
                style="@style/TextView"
                android:layout_marginRight="40dp"
                android:text="注册时长" />

            <TextView
                style="@style/TextViewWeight999"
                android:id="@+id/tv_registerYear" />
        </TableRow>

        <TableRow
            style="@style/TableRow"
            android:layout_marginTop="0.5dp">

            <TextView
                style="@style/TextView"
                android:layout_marginRight="40dp"
                android:text="成交量" />

            <TextView
                style="@style/TextViewWeight999"
                android:id="@+id/tv_volume"/>
        </TableRow>

        <TableRow
            style="@style/TableRow"
            android:layout_marginTop="0.5dp">

            <TextView
                style="@style/TextView"
                android:layout_marginRight="40dp"
                android:text="评星" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RatingBar
                    android:id="@+id/rating"
                    style="@style/RatingBarOrange" />
            </LinearLayout>


        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/ll_collect"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@color/mainColor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/iv_collect"
            android:layout_gravity="center"
            android:src="@mipmap/sc_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_collect"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:text="已收藏"
            android:textSize="@dimen/sp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
