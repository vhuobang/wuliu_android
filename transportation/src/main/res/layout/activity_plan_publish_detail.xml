<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_loading_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="北京昌平区"
                    android:textColor="@color/black_list_color"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:id="@+id/tv_loading_detail_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="回龙观街道金域国际中心B栋308"
                    android:textColor="@color/black_list_color"
                    android:textSize="@dimen/sp_13" />


            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:src="@mipmap/sy_go" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_unloading_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="唐山迁安"
                    android:textColor="@color/black_list_color"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:id="@+id/tv_unloading_detail_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="回龙观街道金域国际中心"
                    android:textColor="@color/black_list_color"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>
        </LinearLayout>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:background="@color/white">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货物信息"
                    android:textColor="@color/black_normal_color"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_good_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="甲醛/100吨/剩余40吨"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/sp_14" />

            </TableRow>

            <View style="@style/dividerLine" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货物密度"
                    android:textColor="@color/black_normal_color"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/cargo_density"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="20.2吨/升"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/sp_14" />

            </TableRow>

            <View style="@style/dividerLine" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运费单价"
                    android:textColor="@color/black_normal_color"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/freight_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="100元/吨"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/sp_14" />

            </TableRow>

            <View style="@style/dividerLine" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货物单价"
                    android:textColor="@color/black_normal_color"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/cargo_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1000元/吨"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/sp_14" />

            </TableRow>

            <View style="@style/dividerLine" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="装车截止时间"
                    android:textColor="@color/black_normal_color"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/loading_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2017-6-23"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/sp_14" />

            </TableRow>

            <View style="@style/dividerLine" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运费支付方"
                    android:textColor="@color/black_normal_color"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/payment_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/sp_14" />

            </TableRow>

            <View style="@style/dividerLine" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结算时间"
                    android:textColor="@color/black_normal_color"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/settlement_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="7天内结算"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/sp_14" />

            </TableRow>

            <View style="@style/dividerLine" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="压车费"
                    android:textColor="@color/black_normal_color"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/press_charges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="100元"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/sp_14" />

            </TableRow>

            <View
                style="@style/dividerLine"
                android:layout_height="5dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="装车联系人"
                    android:textColor="@color/black_normal_color"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/truck_drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="赵敏"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/sp_14" />

            </TableRow>

            <View style="@style/dividerLine" />

            <TableRow style="@style/TableRow">

                <TextView
                    style="@style/TextView"
                    android:text="联系电话" />

                <TextView
                    android:id="@+id/truck_tel"
                    style="@style/TextViewWeight999"
                    android:text="15244478521" />
            </TableRow>

            <View style="@style/dividerLine" />

            <TableRow style="@style/TableRow">

                <TextView
                    style="@style/TextView"
                    android:text="卸车联系人" />

                <TextView
                    android:id="@+id/unloading_contact"
                    style="@style/TextViewWeight999"
                    android:text="张无忌" />
            </TableRow>

            <View style="@style/dividerLine" />

            <TableRow style="@style/TableRow">

                <TextView
                    style="@style/TextView"
                    android:text="联系电话" />

                <TextView
                    style="@style/TextViewWeight999"
                    android:text="15244478521"
                    android:id="@+id/unloading_tel" />
            </TableRow>

            <View
                style="@style/dividerLine"
                android:layout_height="5dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注信息"
                    android:textColor="@color/black_normal_color"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/remarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="罐体车；随时装货发车，备注信息，罐体车 随时装货发车。罐体车的随时装货发车，备注休车，随时装货发车///"
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/sp_14" />

            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/tv_publish"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="9dp"
            android:background="@color/mainColor"
            android:gravity="center"
            android:text="立即发布"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>
</ScrollView>