<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray2"
        android:padding="10dp"
        android:text="请绑定持卡人本人的银行卡"
        android:textColor="@color/black_list_color" />


    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            style="@style/TextView"
            android:text="持卡人" />

        <EditText
            android:id="@+id/et_car_host"
            android:gravity="right"
            android:layout_weight="1"
            android:background="@null"

            android:textColor="@color/gray_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="0.5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            style="@style/TextView"
            android:text="卡号" />

        <EditText
            android:id="@+id/et_bank_number"
            android:hint="请输入银行卡号"
            android:textColorHint="@color/gray_color"
            android:gravity="right"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/gray_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="0.5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            style="@style/TextView"
            android:text="支行名" />

        <EditText
            android:id="@+id/et_bank_branch"
            android:inputType="text"
            android:textColorHint="@color/gray_color"
            android:gravity="right"
            android:layout_weight="1"
            android:background="@null"
            android:hint="确保正确！有关提现是否成功！"
            android:textColor="@color/gray_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="0.5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            style="@style/TextView"
            android:text="省份名" />

        <EditText
            android:id="@+id/et_province"
            android:inputType="text"
            android:textColorHint="@color/gray_color"
            android:gravity="right"
            android:layout_weight="1"
            android:background="@null"
            android:hint="例如：北京市"
            android:textColor="@color/gray_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="0.5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            style="@style/TextView"
            android:text="市名" />

        <EditText
            android:id="@+id/et_city"
            android:inputType="text"
            android:textColorHint="@color/gray_color"
            android:gravity="right"
            android:layout_weight="1"
            android:background="@null"
            android:hint="例如：北京市"
            android:textColor="@color/gray_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="0.5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            style="@style/TextView"
            android:text="手机号" />

        <EditText
            android:id="@+id/et_pehone_number"
            android:inputType="phone"
            android:textColorHint="@color/gray_color"
            android:gravity="right"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/gray_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="0.5dp"
        android:id="@+id/ll_pic_code"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="10dp"

        android:background="@color/white"

        >
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/password" />


        <EditText
            android:id="@+id/et_pic_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入图形验证码"
            android:inputType="text"
            android:maxLength="6"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="@color/gray_color"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:scaleType="fitXY"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="0.5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            style="@style/TextView"
            android:text="验证码" />

        <EditText
          android:hint="请输入验证码"
            android:id="@+id/et_code"
            android:textColorHint="@color/gray_color"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:background="@null"
            android:textColor="@color/gray_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <com.arkui.fz_tools.view.ShapeTextView
            android:id="@+id/verification_code"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="获取验证码"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:stroke="0.2dp"
            app:radius="10dp"
            app:buttonColor="@color/gray_color"
            android:textColor="@color/red"/>

    </LinearLayout>
</LinearLayout>
